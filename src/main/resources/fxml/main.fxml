<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.catmeme.controller.MainController">
    <children>
        <Label text="Générateur de Mèmes de Chats" style="-fx-font-size: 18px; -fx-font-weight: bold;">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </Label>

        <HBox spacing="10.0">
            <children>
                <Label text="Texte du mème:" style="-fx-font-weight: bold;" />
                <TextField fx:id="textField" prefWidth="300.0" promptText="Entrez votre texte ici..." />
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </VBox.margin>
        </HBox>

        <Canvas fx:id="imageCanvas" height="400.0" width="600.0" style="-fx-border-color: #cccccc; -fx-border-width: 1px;">
            <VBox.margin>
                <Insets left="10.0" right="10.0" />
            </VBox.margin>
        </Canvas>

        <HBox spacing="10.0" alignment="CENTER">
            <children>
                <Button fx:id="loadImageButton" onAction="#loadRandomCatImage" text="Nouvelle image" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />
                <Button fx:id="saveImageButton" onAction="#saveImage" text="Sauvegarder" disable="true" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" />
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>